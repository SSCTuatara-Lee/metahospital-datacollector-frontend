.camera-panel {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  padding: 80px 20px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}
.camera-btn-warpper {
  width: 100%;
  text-align: center;
  margin-top: 80px;
}
.camera-btn {
  width: 50%;
  height: 8vh;
  line-height: 8vh;
  margin: auto;
  margin-top: 2vh;
  color: white;
  background: #57bead;
  border-radius: 4rpx;
  text-align: center;
}
.form-cell_title {
  margin-bottom: 10px;
  font-size: medium;
}

.form-cell_title-placeholder {
  font-size: small;
  color: lightgray;
}

.upload-text {
  margin-left: auto;
  opacity: 0.5;
}

.upload {
  width: 15px;
  height: 15px;
  margin-left: 10px;
}

.option {
  margin-left: 15vw;
}

.selector {
  width: 15px;
  height: 15px;
  margin-left: auto;
  margin-top: 5px;
}

.footer {
  width: 100%;
  height: 10vh;
  position: fixed;
  bottom: 0;
  display: flex;
  border-top: lightgray solid 1px;
}

.footer view {
  width: 50%;
  height: 100%;
  padding-top: 2vh;
  text-align: center;
}

.reset {
  background: white;
}

.save {
  color: white;
  background: #353535;
}
.mr-0 {
  margin-right: 0;
}
.picker-region {
  flex: 1;
  text-align: right;
  padding-right: 10rpx;
}
.textarea {
  height: 10vh;
}
.form-label {
  width: 150rpx;
}
.input-style {
  color: #5d6a87;
}
.placeholder-style {
  color: rgba(0,0,0,.3);
}